{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "analysis": {
      "char_filter": {
        "remove_whitespace": {
          "type": "pattern_replace",
          "pattern": "\\s+",
          "replacement": ""
        }
      },
      "filter": {
        "edge_ngram_filter": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 50
        }
      },
      "normalizer": {
        "lowercase_trim": {
          "type": "custom",
          "filter": ["lowercase", "trim"]
        }
      },
      "analyzer": {
        "normalized_fuzzy": {
          "type": "custom",
          "tokenizer": "keyword",
          "char_filter": ["remove_whitespace"],
          "filter": ["lowercase"]
        },
        "autocomplete_index": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": ["lowercase", "trim", "edge_ngram_filter"]
        },
        "autocomplete_search": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": ["lowercase", "trim"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "rid": { "type": "keyword" },
      "docid": { "type": "keyword" },
      "url": { "type": "keyword" },

      "country": {
        "type": "keyword",
        "fields": {
          "fuzzy": {
            "type": "text",
            "analyzer": "normalized_fuzzy"
          }
        }
      },
      "event_title": {
        "type": "keyword",
        "fields": {
          "fuzzy": {
            "type": "text",
            "analyzer": "normalized_fuzzy"
          },
          "words": {
            "type": "text",
            "analyzer": "standard"
          },
          "normalized": {
            "type": "keyword",
            "normalizer": "lowercase_trim"
          },
          "prefix": {
            "type": "text",
            "analyzer": "autocomplete_index",
            "search_analyzer": "autocomplete_search"
          }
        }
      },
      "event_theme": {
        "type": "keyword",
        "fields": {
          "fuzzy": {
            "type": "text",
            "analyzer": "normalized_fuzzy"
          }
        }
      },

      "year": { "type": "integer" },
      "event_count": { "type": "integer" },

      "event_date": {
        "type": "date",
        "format": "yyyy-MM-dd||yyyy-MM-dd'T'HH:mm:ss||epoch_millis"
      },

      "event_summary": { "type": "keyword", "index": false },
      "event_highlight": { "type": "keyword", "index": false },
      "event_conclusion": { "type": "keyword", "index": false },
      "commentary_summary": { "type": "keyword", "index": false },
      "next_event_plan": { "type": "keyword", "index": false },
      "next_event_suggestion": { "type": "keyword", "index": false }
    }
  }
}
