# OpenSearch Configuration
OPENSEARCH_URL=https://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
INDEX_NAME=events

# Server Configuration
HOST=127.0.0.1
PORT=8002

# Search Parameters (Optimized for High Precision)
MIN_SCORE_RID=2.5
MIN_SCORE_DOCID=3.5
MIN_PREFIX_SCORE=1.0
MAX_PREFIX_RESULTS=8

# Embedding Configuration for Hybrid Search (Keyword + Vector)
# Set USE_VECTOR_SEARCH=false to disable vector search and use keyword-only search
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_API_URL=http://localhost:11434/api/embeddings
EMBEDDING_DIMENSION=768
USE_VECTOR_SEARCH=true

# Hybrid Search Weight (0.0 to 1.0)
# VECTOR_WEIGHT=0.5 means 50% vector, 50% keyword
# VECTOR_WEIGHT=0.7 means 70% vector, 30% keyword (more semantic)
# VECTOR_WEIGHT=0.3 means 30% vector, 70% keyword (more precise)
VECTOR_WEIGHT=0.5
